{
  "name": "project-tracker",
  "version": "1.0.0",
  "description": "Full-stack project tracking system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "start": "node backend/dist/server.js",
    "server": "nodemon backend/server.ts",
    "client": "npm run dev --prefix frontend",
    "build-client": "npm run build --prefix frontend && npm run move-build",
    "move-build": "rm -rf backend/public && cp -r frontend/.next backend/public",
    "build": "npm i && npm run build:backend && npm run build-client",
    "build:backend": "cd backend && npm i && tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "framer-motion": "^12.34.0",
    "react-toastify": "^11.0.5"
  }
}
